<style>

  
  .card-container {
    justify-content: center;
    margin-top: -50px;
    flex-direction: row;
    z-index: 2;
    gap: 2rem;
    display: flex;
  }

  @media (max-width: 900px) {
    .card-container {
      display: grid;
      grid-template-columns: 1fr;
      justify-items: center;
    }

    .grid-container {
      display: grid;
      grid-template-columns: 1fr;
      margin-top: 0;

    }
  }
</style>
