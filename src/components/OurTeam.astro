---
import ImgCard from "./ImgCard.astro";
import TextTag from "./TextTag.astro";
---

<section class="container">
  <div class="text">
    <div>
    <TextTag text="Our Team" />
</div>
    <h2>We Champion the bold to achieve the extraordinary</h2>
    <p>
      Ippsum is the result of synergy between our teams and our customers. Our
      company culture is focused on excellent productivity, customer
      satisfaction, respect for team.
    </p>
  </div>
  <div class="people">
    <ImgCard img="../img/Sarah.avif" title="Sarah Jasmine" />
    <ImgCard img="../img/john.avif" title="John Carter" />
    <ImgCard img="../img/daisy.avif" title="Daisy Stella" />
  </div>
</section>
<style>
  .container {
    gap: 3rem;
    display: flex;
    flex-direction: column;
    grid-column: content;
  }

  .text {
    display: flex;
    flex-direction: column;
  }

  .people {
    display: flex;
    flex-direction: row;
    gap: 3rem;
  }

@media (max-width:700px) {
    .people {
    display: grid;
   grid-template-columns: 1fr;
 justify-items:center;
    gap: 3rem;
  }
}
</style>
