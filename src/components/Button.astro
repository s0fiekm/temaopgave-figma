---
const { text } = Astro.props;
---

<button>
  <a href="">{text}</a>
</button>

<style>
  button {
    background-color: var(--color-primary-1);
    display: flex;
    align-items: center;
    gap: 10px;
    border: 0;
    border-radius: 55px;
    align-items: center;
    transition: all 0.15s;
    box-sizing: border-box;

    & a {
      color: var(--color-primary-3);
      padding: 0.25rem 1rem;
      text-align: center;
      text-decoration: none;
    }
  }
</style>
