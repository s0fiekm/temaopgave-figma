---
const { text } = Astro.props;
---

<button>
  <a href="">{text}</a>
</button>

<style>
  button {
    white-space: nowrap;
    width: 10rem;
    background-color: var(--color-primary-1);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    border: 0;
    border-radius: 55px;
    align-items: center;
    box-sizing: border-box;

    & a {
      padding: 0.9375rem 1.875rem;
      color: var(--color-primary-3);
      text-align: center;
      text-decoration: none;
      display: inline-block;
    }
  }
</style>
