---
import Button from "./Button.astro";
import CardHero from "./CardHero.astro";
---

<section class="grid-container full">
  <div class="hero-text">
    <h1>Adam Buschemia Business Consultant</h1>
    <p>
      Get help from Alex Moore, a professional business coach <br /> with advanced
      experience on growth and business scaling.
    </p>
    <Button text="Book a Meeting" variant="white" />
  </div>
  <div class="hero-img">
    <img src="../img/Photo.avif" alt="" />
  </div>
</section>

<div class="card-container">
  <CardHero
    header="Finance & Restructuring"
    paragraph="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling."
    buttonText="Our Services"
  />
  <CardHero
    header="Our Approach"
    paragraph="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling."
    buttonText="More About"
  />
  <CardHero
    header="Consultalk Result"
    paragraph="Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling."
    buttonText="Explore Our Solution"
  />
</div>
<style>
  .overall-container {
    width: 100%;
  }
  .card-container {
    transform: translateY(-50px);
    display: flex;
    justify-content: center;
    flex-direction: row;
    gap: 2rem;
    z-index: 2;
  }

  .grid-container {
    align-items: center;
    background-color: var(--color-primary-3);
    display: grid;
    grid-template-columns: 1fr 1fr;
    z-index: 1;
  }
  .hero-text {
    row-gap: 20px;
    padding-inline: max(1rem, 50% - var(--content) / 2);
    grid-column: 1;
    color: var(--color-secondary-2);
    display: flex;
    flex-direction: column;
  }

  .hero-img {
    grid-column: 2;
    display: flex;
    justify-content: flex-end;
  }

  .hero-img img {
    max-width: 100%;
    height: auto;
    object-fit: cover;
  }
</style>
