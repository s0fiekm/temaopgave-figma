---
import Button from "./Button.astro";
---

<div class="full">
  <div class="header-content">
    <h1>AskExperts</h1>
    <nav class="menu-bar">
      <a href="#">Home</a>
      <a href="#">Case Study</a>
      <a href="#">Team</a>
      <a href="#">About</a>
    </nav>
    <Button text="Login" />
  </div>
</div>

<style>
  h1 {
    font-size: 30px;
    font-weight: 600;
  }

  .full {
    background-color: rgba(27, 27, 27, 0.91);
    grid-column: full;
  }

  .header-content {
    padding-inline: max(1rem, 50% - var(--content) / 2);
    color: white;
    padding: 38px;
    display: flex;
    justify-content: space-evenly;
  }
  a {
    color: white;
    text-decoration: none;
  }

  .menu-bar {
    display: flex;
    gap: 2rem;
    align-items: center;
  }
</style>
