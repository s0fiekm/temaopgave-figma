---
import Button from "./Button.astro";
---

<header class="full">
  <div class="header-content">
    <h1>AskExperts</h1>
    <!-- Hidden checkbox to control the menu -->
    <input type="checkbox" id="menu-toggle" class="menu-toggle" />
    <!-- Label that acts as the burger icon -->
    <label for="menu-toggle" class="burger-menu" aria-label="Toggle menu">
      â˜°
    </label>
    <nav class="menu-bar">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/casestudy">Case Study</a></li>
        <li><a href="/team">Team</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
    <Button text="Login" />
  </div>
</header>

<style>
  h1 {
    font-size: 30px;
    font-weight: 600;
  }

  .full {
    background: rgba(27, 27, 27, 0.91);

    backdrop-filter: blur(10.5px);
    padding: 2.375rem;
  }

  .menu-collapsed {
    display: flex;
    align-items: center;
    gap: 30px;
  }

  .menu-toggle {
    display: none;
  }

  .burger-menu {
    display: none;
    font-size: 24px;
    cursor: pointer;
  }

  .header-content {
    gap: 2rem;
    justify-content: space-evenly;
    max-width: var(--content-width);
    color: var(--color-secondary-2);
    display: flex;
    flex-direction: row;
    width: 100%;
    align-items: center;
  }
  li a {
    color: white;
    text-decoration: none;
  }

  ul {
    list-style: none;
    display: flex;
    flex-direction: row;
    gap: 2rem;
    align-items: center;
  }

  .burger-menu {
    display: none;
    font-size: 24px;
    background: none;
    border: none;
    cursor: pointer;
  }

  @media (max-width: 700px) {
    .header {
      margin: 0;
    }
    .burger-menu {
      display: block;
    }

    .menu-bar {
      display: none;
      position: absolute;
      top: 110px;
      right: 0;
      background-color: black;
      width: 100%;
      z-index: 3;
    }

    .menu-bar ul {
      flex-direction: column;
    }

    .menu-bar li {
      padding: 10px 20px;
      text-align: center;
    }

    .menu-toggle:checked + .burger-menu + .menu-bar {
      display: block;
    }
  }
</style>
