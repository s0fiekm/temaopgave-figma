---
const { title, image } = Astro.props;
import TextTag from "./TextTag.astro";
---

<section class="hero-banner full">
  <div class="img-container">
    <img src={image} alt="" />
  </div>
  <div class="text">
    <div>
      <TextTag text="Services" />
    </div>
    <h1 class="tag">{title}</h1>
  </div>
</section>

<style>
  .hero-banner {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: auto auto auto;
  }

  .img-container {
    grid-column: 1/-1;
    grid-row: 1/-1;
  }

  .img-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
  }

  .text {
    grid-row: 2/3;
    grid-column: 2/4;
    display: flex;
    flex-direction: column;
    border-radius: 1.8125rem;
    background: rgba(255, 255, 255, 0.8);
    padding: 3rem 3.75rem;
  }
</style>
