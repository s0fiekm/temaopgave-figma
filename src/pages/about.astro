---
import Footer from "../components/Footer.astro";
import OurTeam from "../components/OurTeam.astro";
import Header from "../components/Header.astro";
import HeroImg from "../components/HeroImg.astro";
import OurVisionContainer from "../components/OurVisionContainer.astro";
import Newsletter from "../components/Newsletter.astro";
import ValuesContainer from "../components/ValuesContainer.astro";
import Accordion from "../components/Accordion.astro";
import "../styles/global.css";
---

<html lang="en">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/src/styles/global.css" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&display=swap");
    @import url("https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap");
  </style>
  <meta name="generator" content={Astro.generator} />
  <title>Astro</title>

  <body>
    <Header />
    <HeroImg
      title="Creative Services For Boost Your Business Growth"
      image="/img/service.avif"
    />
    <OurVisionContainer />
    <ValuesContainer />
    <OurTeam />
    <Accordion />
    <Newsletter />
    <Footer />
  </body>
</html>
